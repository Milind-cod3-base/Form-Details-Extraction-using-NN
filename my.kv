ScreenManager:

    MainWindow:
    StatsWindow:
    DetailsWindow:
    ManualWindow:



<MainWindow>:

    # setting screen parameters
    name: "mainW"
    id: mainW

    # setting ids for buttons
    # uploadHand: uploadHand
    # uploadDigi: uploadDigi
    # stats: stats
    # details: details

    ScrollView:

        do_scroll_y: True

        MDFloatLayout:
            md_bg_color: rgba(128,0,0,255)
            size_hint_y: None
            pos_hint: {"center_x":0.5,"center_y":0.5}
            height: dp(800)
            width: dp(800)
            MDCard: #card to hold components
                orientation: "vertical"
                padding: "10dp"
                spacing: "5dp"
                pos_hint: {"center_x":0.5,"center_y":0.9}
                md_bg_color: rgba(200,200,210,255)
                radius:(20,20,20,20)
                size_hint: 0.5,0.1
                elevation: 6

                MDRoundFlatIconButton: #cross referencing the user credentionals
                    id: mainImage
                    text: 'Upload Form'
                    text_color: rgba(0,0,45,255)
                    icon: "file-plus"
                    theme_icon_color: "Custom"
                    icon_color: rgba(0,0,45,255)
                    pos_hint: {"center_x":.5,"center_y":0.8}
                    font_size: 18
                    line_color: rgba(0,0,45,255)
                    on_release:
                        root.manager.transition.direction= "left"
                        root.open_file_manager()


            # MDCard: #card to hold components
            #     orientation: "vertical"
            #     padding: "10dp"
            #     spacing: "5dp"
            #     pos_hint: {"center_x":0.5,"center_y":0.65}
            #     md_bg_color: rgba(200,200,210,255)
            #     radius:(20,20,20,20)
            #     size_hint: 0.5,0.1
            #     elevation: 6

            #     MDRoundFlatIconButton: #cross referencing the user credentionals
            #         id: mainImage
            #         text: 'Upload Handwritten Form'
            #         text_color: rgba(0,0,45,255)
            #         icon: "file-plus"
            #         theme_icon_color: "Custom"
            #         icon_color: rgba(0,0,45,255)
            #         pos_hint: {"center_x":.5,"center_y":0.8}
            #         font_size: 18
            #         line_color: rgba(0,0,45,255)

            
            MDCard: #card to hold components
                orientation: "vertical"
                padding: "10dp"
                spacing: "5dp"
                pos_hint: {"center_x":0.5,"center_y":0.65}
                md_bg_color: rgba(200,200,210,255)
                radius:(20,20,20,20)
                size_hint: 0.5,0.2
                elevation: 6

                MDRoundFlatIconButton: #cross referencing the user credentionals
                    text: 'Check Statistics'
                    icon: "knob"
                    icon_color: rgba(0,0,45,255)
                    text_color: rgba(0,0,45,255)
                    pos_hint: {"center_x":.5,"center_y":0.9}
                    font_size: 18
                    line_color: rgba(0,0,45,255)
                    on_release:
                        root.manager.current = 'statsW'
                        root.manager.transition.direction= "left"

                MDRoundFlatIconButton: #cross referencing the user credentionals
                    text: 'Check unfilled areas'
                    icon: 'database-check'
                    icon_color: rgba(0,0,45,255)
                    text_color: rgba(0,0,45,255)
                    pos_hint: {"center_x":.5,"center_y":0.0}
                    font_size: 18
                    line_color: rgba(0,0,45,255)
                    on_release:
                        root.manager.current = 'detailW'
                        root.manager.transition.direction= "left"
                    

